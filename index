<body>

<div class="container">
    <h1>Kalkulator nadpłaty kredytu</h1>

    <label>Kwota kredytu (PLN)
        <input type="number" id="loanAmount">
    </label>

    <label>Oprocentowanie roczne (%)
        <input type="number" step="0.01" id="interestRate">
    </label>

    <label>Okres kredytu (lata)
        <input type="number" id="years">
    </label>

    <label>Kwota nadpłaty jednorazowej (PLN)
        <input type="number" id="overpayment">
    </label>

    <button onclick="calculate()">Oblicz</button>

    <div class="result" id="result"></div>
</div>

<script>
function calculate() {
    const loan = parseFloat(document.getElementById('loanAmount').value);
    const rate = parseFloat(document.getElementById('interestRate').value) / 100 / 12;
    const years = parseInt(document.getElementById('years').value);
    const overpayment = parseFloat(document.getElementById('overpayment').value);

    const months = years * 12;

    const monthlyRate = rate;
    const installment = loan * (monthlyRate * Math.pow(1 + monthlyRate, months)) /
                        (Math.pow(1 + monthlyRate, months) - 1);

    let totalInterest = 0;
    let balance = loan;

    for (let i = 0; i < months; i++) {
        let interest = balance * monthlyRate;
        totalInterest += interest;
        balance -= (installment - interest);
    }

    // Nadpłata
    balance = loan - overpayment;
    let monthsAfter = 0;
    let totalInterestAfter = 0;

    while (balance > 0) {
        let interest = balance * monthlyRate;
        totalInterestAfter += interest;
        balance -= (installment - interest);
        monthsAfter++;
        if (monthsAfter > 1000) break;
    }

    const savings = totalInterest - totalInterestAfter;

    document.getElementById('result').innerHTML = `
        <b>Rata miesięczna:</b> ${installment.toFixed(2)} PLN<br><br>
        <b>Odsetki bez nadpłaty:</b> ${totalInterest.toFixed(2)} PLN<br>
        <b>Odsetki po nadpłacie:</b> ${totalInterestAfter.toFixed(2)} PLN<br><br>
        <b>Oszczędność:</b> ${savings.toFixed(2)} PLN<br>
        <b>Skrócenie kredytu:</b> ${months - monthsAfter} miesięcy
    `;
}
</script>

</body>
</html>
